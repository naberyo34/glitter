<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
  <context id="postgres" targetRuntime="MyBatis3DynamicSql">
    <jdbcConnection
      driverClass="org.postgresql.Driver"
      connectionURL="${jdbcUrl}"
      userId="${jdbcUsername}"
      password="${jdbcPassword}"
    />
    <javaModelGenerator targetPackage="com.example.demo.domain" targetProject="src/main/java" />
    <sqlMapGenerator targetPackage="com.example.demo.mapper" targetProject="src/main/resources" />
    <javaClientGenerator type="XMLMAPPER" targetPackage="com.example.demo.mapper"
      targetProject="src/main/java" />
    <table schema="public" tableName="task">
      <generatedKey column="id" sqlStatement="JDBC" />
    </table>
    <table schema="public" tableName="user" />
    <table schema="public" tableName="post">
      <generatedKey column="id" sqlStatement="JDBC" />
    </table>
    <table schema="public" tableName="task">
      <generatedKey column="id" sqlStatement="JDBC" />
    </table>
  </context>
</generatorConfiguration>